#include <stdio.h>
#include <stdlib.h>

int main() {
    int num, suma = 0;

    printf("Ingrese un numero entero N: ");
    scanf("%d", &num);

    num = abs(num);

    for (int i = 1; i <= num; i++) {
        if (i % 2 == 0) {
            suma -= i;
        } else {
            suma += i;
        }
    }

    printf("La suma es: %d\n", suma);

    return 0;
}
