#include <stdio.h>

int main() {
    int n;
    double x, suma = 0.0;

    printf("Ingrese el valor de X (número real): ");
    scanf("%lf", &x);

    printf("Ingrese el valor de n (número entero impar): ");
    scanf("%d", &n);

    if (n % 2 == 0) {
        printf("El valor de n debe ser impar.\n");
    } else {
        for (int i = 1; i <= n; i += 2) {
            long long fact = 1;
            for (int j = 1; j <= i; j++) {
                fact *= j;
            }

            double signo = (i / 2 % 2 == 0) ? 1 : -1;
            suma += signo * (pow(x, i) / fact);
        }

        printf("El resultado de la serie es: %.6f\n", suma);
    }

    return 0;
}
