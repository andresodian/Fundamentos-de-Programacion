#include <stdio.h>
#include <stdlib.h>

int main() {
    int num, resto, contador_pares = 0;
    printf("Ingrese un numero entero: ");
    scanf("%d", &num);
    num = abs(num);
    while (num > 0) {
        resto = num % 10;
        if (resto % 2 == 0) {
            contador_pares++;
        }
        num = num / 10;
    }
    printf("El numero tiene %d digitos pares.\n", contador_pares);

    return 0;
}
