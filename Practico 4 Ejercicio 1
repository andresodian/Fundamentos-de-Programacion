#include <stdio.h>

int main() {
    int numero, suma = 0, digito;
    printf("Ingrese un numero entero: ");
    scanf("%d", &numero);
    if (numero < 0) {
        numero = -numero;
    }
    while (numero > 0) {
        digito = numero % 10;
        suma += digito;
        numero /= 10;
    }
    printf("La suma de los d√≠gitos es: %d\n", suma);
    return 0;
}
