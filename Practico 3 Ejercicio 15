#include <stdio.h>

int main() {
    int horas = 0, minutos = 0, segundos = 0;
    int i;

    while (1) {
        printf("\r%02d:%02d:%02d", horas, minutos, segundos);
        fflush(stdout);

        segundos++;

        if (segundos == 60) {
            segundos = 0;
            minutos++;
        }

        if (minutos == 60) {
            minutos = 0;
            horas++;
        }

        if (horas == 24) {
            horas = 0;
        }

        for (i = 0; i < 1000000; i++) {
        }
    }

    return 0;
}
