#include <stdio.h>

long long factorial(int n) {
    long long fact = 1;
    for (int i = 1; i <= n; i++) {
        fact *= i;
    }
    return fact;
}

int main() {
    int n;
    double x, suma = 0.0;

    printf("Ingrese el valor de X (número real): ");
    scanf("%lf", &x);

    printf("Ingrese el valor de n (número entero): ");
    scanf("%d", &n);

    for (int i = 1; i <= n; i++) {
        double signo = (i % 2 == 0) ? -1 : 1;
        suma += signo * (pow(x, i) / factorial(i));
    }

    printf("El resultado de la serie es: %.6f\n", suma);

    return 0;
}
