#include <stdio.h>

int main() {
    int num1, num2;
    printf("Ingrese el primer número entero: ");
    scanf("%d", &num1);
    printf("Ingrese el segundo número entero: ");
    scanf("%d", &num2);

    int a = num1;
    int b = num2;

    while (b != 0) {
        int temp = b;
        b = a % b;
        a = temp;
    }

    int mcm = (num1 * num2) / a;

    printf("El MCM de %d y %d es: %d\n", num1, num2, mcm);
    return 0;
}
