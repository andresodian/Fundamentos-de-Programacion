#include <stdio.h>
#include <stdlib.h>
int main() {
    int num, resto, num_invertido = 0;

    printf("Ingrese un numero entero: ");
    scanf("%d", &num);

    num = abs(num);

    while (num > 0) {
        resto = num % 10;
        num_invertido = num_invertido * 10 + resto;
        num = num / 10;
    }
    printf("El nÃºmero invertido es: %d\n", num_invertido);

    return 0;
}
